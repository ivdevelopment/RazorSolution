@model Geslacht
@Html.DropDownList("",
new SelectListItem[]{
    new SelectListItem(){
        Text = "Mannelijk",
        Value = Geslacht.Man.ToString(),
        Selected = Model == Geslacht.Man
    },
    new SelectListItem(){
        Text = "Vrouwelijk",
        Value = Geslacht.Vrouw.ToString(),
        Selected = Model == Geslacht.Vrouw
    },
    new SelectListItem(){
        Text = "X",
        Value = Geslacht.X.ToString(),
        Selected = Model == Geslacht.X
    }
})