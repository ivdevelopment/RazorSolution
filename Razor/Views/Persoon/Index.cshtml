@model IEnumerable<Persoon>
@{
    ViewData["Title"] = "Index";
}

@if (Model != null){
    <h2>Personen</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Voornaam</th>
                <th>Familienaam</th>
                <th>Score</th>
                <th>Wedde</th>
                <th>Paswoord</th>
                <th>Geboren</th>
                <th>Gehuwd</th>
                <th>Opmerkingen</th>
                <th>Geslacht</th>
                <th>Rekeningnummer</th>
                <th>Verwijderen</th>
                <th>Wijzigen</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var persoon in Model){
                <tr>
                    <td>@persoon.ID</td>
                    <td>@persoon.Voornaam</td>
                    <td>@persoon.Familienaam</td>
                    <td>@persoon.Score</td>
                    <td>@Html.DisplayFor(m => persoon.Wedde)</td>
                    <td>@persoon.Paswoord</td>
                    <td>@Html.DisplayFor(m => persoon.Geboren)</td>
                    <td>@Html.DisplayFor(m => persoon.Gehuwd)</td>
                    <td>@persoon.Opmerkingen</td>
                    <td>@persoon.Geslacht</td>
                    <td>@persoon.RekeningNummer</td>
                    <td>
                        <a asp-action="VerwijderForm" asp-route-id="@persoon.ID"><img src="~/images/delete.png" alt="delete" /></a>
                    </td>
                    <td>
                        <a asp-action="EditForm" method="get" asp-route-id="@persoon.ID">
                            <img src="~/images/edit.png" alt="edit">
                        </a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
            <a asp-action="Opslag" class="btn btn-secondary">Opslag</a>
            <a asp-action="Toevoegen" class="btn btn-primary">Persoon toevoegen</a>

}
else{
    <h2>De lijst met personen is leeg</h2>
}
